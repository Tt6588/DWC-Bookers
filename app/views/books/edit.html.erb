<h1 class="title">Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<div class="control"></div>
  <%= link_to "Show", book_path(book.id) %>
   |
  <a href="/books">Back</a>