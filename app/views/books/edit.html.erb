<h1 class="title">Editing Book</h1>

<% if @book.errors.any? %>
    <div id="error_explanation">
   
      <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  
  <h4>Body</h4>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

<div class="control">
  <%= link_to "Show", book_path(@book.id) %>
   |
  <a href="/books">Back</a>
</div>